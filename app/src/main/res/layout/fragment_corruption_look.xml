<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/corruption_look_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="CORRUPTION REPORT"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lector's name:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/corruption_look_fragment_lector_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lector's name:"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report description:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/corruption_look_fragment_report_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report description:"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/corruption_look_fragment_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts:"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>