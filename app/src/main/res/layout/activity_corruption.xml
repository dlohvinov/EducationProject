<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iot.lviv.ua.educationproject.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CORRUPTION REPORT"
        android:textSize="24sp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/corruption_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type your name"
        android:inputType="text"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/corruption_lector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type lector's name"
        android:inputType="text"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/corruption_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="describe your report"
        android:gravity="bottom"
        android:inputType="textMultiLine"
        
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/corruption_send"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="SEND"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimaryDark" />


</LinearLayout>
